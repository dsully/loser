<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-us" lang="en-us">
  <head>
    <title>Loser</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    <%= css_include_tag 'master' %>
    <%= js_include_tag 'jquery-1.3.2.pack' %>
    <%= js_include_tag 'jquery.flot.pack' %>

    <% if request.uri == "/summary" or request.uri == "/" %>
    <%= js_include_tag 'jquery.sparkline.pack' %>
    <%= js_include_tag 'jquery.tablesorter-2.0.3.pack' %>
    <%= js_include_tag 'jquery.metadata-2.0.pack' %>
    <% end %>

    <% if request.uri == "/admin" %>
    <%= css_include_tag 'jquery-ui-1.7.1.smoothness' %>
    <%= js_include_tag 'jquery-ui-1.7.1.pack' %>
    <% end %>
  </head>

  <body>
    <% if session and session.user %>
    <div class="container" id="navigation-tabs">
      <ul id="tabnav">
        <li class="tab"><%= link_to 'Summary', '/summary' %></li>
        <li class="tab"><%= link_to 'Weighings', '/weighings' %></li>
        <li class="tab"><%= link_to 'Chart', '/chart' %></li>
        <li class="tab"><%= link_to 'Profile', '/profile' %></li>
        <% if session.user.admin %>
          <li class="tab"><%= link_to 'Admin', '/admin' %></li>
        <% end %>
        <li class="tab"><%= link_to 'Logout', '/logout' %></li>
      </ul>
    </div>
    <% end %>

    <div class="container" id="content">
      <% if message and message[:notice] %>
        <div id="notice">
          <%= message[:notice] %>
        </div>
      <% end %>

      <%= catch_content :for_layout %>
    </div>
  </body>
</html>
